<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_small"
        android:layout_marginStart="@dimen/view_margin_small"
        android:textSize="@dimen/subtitle"
        android:fontFamily="sans-serif-black"
        android:text="@string/ingredients"/>

    <TextView
        android:id="@+id/tv_show_on_home_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/show_on_home_screen"
        android:padding="@dimen/view_margin_small" />

    </LinearLayout>


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</androidx.core.widget.NestedScrollView>

</LinearLayout>