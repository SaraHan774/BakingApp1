<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_holder_steps_parent">

    <TextView
        android:id="@+id/tv_detail_step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_small"
        android:layout_marginBottom="@dimen/view_margin_small"
        android:layout_marginTop="@dimen/view_margin_small"

        android:textSize="15sp"
        android:text="@string/step"/>
    <TextView
        android:id="@+id/tv_detail_step_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_small"
        android:layout_marginBottom="@dimen/view_margin_small"
        android:layout_marginTop="@dimen/view_margin_small"
        android:textSize="@dimen/contents"
        android:fontFamily="sans-serif-condensed-medium"/>

</LinearLayout>